<!doctype html>
<html>

	<head>
		<meta charset="utf-8">
		<title>Hello MUI</title>
		<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<link rel="stylesheet" href="../../css/mui.min.css">
	</head>
	<style type="text/css">
		#popover {
			min-width: 282px;
			height: 300px;
			top: 50% !important;
			margin-top: -150px;
			left: 50% !important;
			margin-left: -141px;
		}
		
		@media (min-width: 400px) {
			#popover {
				width: 80%;
				margin-left: -40%;
			}
		}
		
		.mui-popover .mui-popover-arrow {
			display: none !important;
		}
	</style>

	<body style="background:#f5f4f4;">
		<header id="header" class="mui-bar mui-bar-nav">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left" style="color:#000"></a>
			<h1 class="mui-title">上传资料</h1>
		</header>

		<div class="mui-scroll-wrapper" style="margin-top:55px;">
			<div class="mui-scroll cjs" style="background: #fff;padding-bottom: 100px;border-bottom:1px solid #ccc;margin-bottom: 50px;">
				<div class="mui-input-row">
					<label>姓名</label>
					<input type="text" name="name" id="name" class="mui-input-clear" placeholder="带清除按钮的输入框">
				</div>
				<div class="mui-input-row">
					<label>卡号</label>
					<input type="text" name="cardno" id="cardno" class="mui-input-clear" placeholder="带清除按钮的输入框">
				</div>
				<li class="mui-table-view-cell" style="position: relative;list-style: none;" onclick="xzyh()">

					<label>银行</label>
					<div class="con" style="position: absolute;right:20%;top:10px;color:#77b4fc;"><span style="color:#77b4fc;">请选择银行</span></div>
					<input name="back" type="text" id="back" class="mui-input-clear" style="display: none;">

				</li>
				<div class="mui-input-row">
					<label>开户地区</label>
					<input type="text" name="backaddress" id="backaddress" class="mui-input-clear" placeholder="带清除按钮的输入框">
				</div>
				<h5 style="color:#5DA8FC;text-align:left;padding:10px;">上传身份证信息</h5>
				<div onclick="sczl(this)" style="width:90%;margin:0 5%;border:1px solid #e1e1e1">
					<div style="width:80%;margin:5% 10%;height:140px;background:url(../../images/zmsfz.png) center center no-repeat;background-size:100% 100%;"></div>
					<p style="text-align: center;">请上传身份证正面</p>
				</div>
				<div onclick="sczl(this)" style="width:90%;margin:10px 5%;border:1px solid #e1e1e1">
					<div style="width:80%;margin:5% 10%;height:140px;background:url(../../images/fmsfz.png) center center no-repeat;background-size:100% 100%;"></div>
					<p style="text-align: center;">请上传身份证正面</p>
				</div>
				<h5 style="color:#5DA8FC;text-align:left;padding:10px;">上传体检单</h5>
				<div onclick="sczl(this)" style="width:90%;margin:0 5%;border:1px solid #e1e1e1">
					<div style="width:80%;margin:5% 10%;height:140px;background:url(../../images/sctjd.png) center center no-repeat;background-size:100% 100%;"></div>
					<p style="text-align: center;">请上传身份证正面</p>
				</div>

				<button class="mui-btn mui-btn-primary mui-btn-block " onclick="submit(this)" style="width:50%;margin:10px auto;padding:5px;background:#5dbafa;border:1px solid #5dbafa;">提交</button>
			</div>

		</div>
		<!--弹出窗口-->
		<div id="popover" class="mui-popover">
			<div class="mui-popover-arrow"></div>
			<div class="mui-content-padded ">
				<h4 style="color:#5DA8FC;text-align:center;padding:10px;">请选择银行</h4>
				<div class="fxzw"></div>
			</div>
		</div>
		<script src="../../js/mui.min.js"></script>
		<script>
			var deceleration = mui.os.ios ? 0.003 : 0.0009;
			mui('.mui-scroll-wrapper').scroll({
				bounce: true,
				indicators: true, //是否显示滚动条
				deceleration: deceleration,
				scrollX: true, //是否横向滚动
			});

			function xzyh() {
				mui("#popover").popover("toggle");
			}

			function sczl(e) {
				// 从相册中选择图片
				var isthis = e.children[0];
				console.log(e.children[0].outerHTML);
				console.log("从相册中选择图片:");
				plus.gallery.pick(function(path) {
					console.log(path);
					plus.io.resolveLocalFileSystemURL(path, function(entry) {
						// 可通过entry对象操作test.html文件 
						var reader = null;
						entry.file(function(file) {
							reader = new plus.io.FileReader();
							reader.onloadend = function(e) {
								plus.console.log("Read success");
								// Get data
								plus.console.log(e.target.result);
							};
							reader.readAsDataURL(file);
							reader.onload = function(e) {
								console.log(this.result);
								//显示文件  
								//												addimages.innerHTML = '<img style="width:100%" src="' + this.result + '" alt="" />';
								mui.ajax($$$.siturl + 'm=App&c=SignInformation&a=savefileTouin', {
									type: 'post',
									data: {
										img: this.result
									},
									dataType: 'json',
									success: function(data) {
										console.log(JSON.stringify(data));

										isthis.style.background = "url(" + $$$.imgurl + data.data.filepath + ") center center no-repeat"
										isthis.style.backgroundSize = "100% 100%";

									}
								})
							}
						}, function(e) {
							console.log(e.message);
						});
					}, function(e) {
						alert("Resolve file URL failed: " + e.message);
					});

				}, function(e) {
					console.log("取消选择图片");
				}, {
					filter: "image"
				});
			}
			//提交

			

			function submit() {
				var isuid = localStorage.getItem('user_uid');
				var nameval = document.querySelector('#name').value;
				var cardnoval = document.querySelector('#cardno').value;
				var backval = document.querySelector('#back').value;
				var backaddressval = document.querySelector('#backaddress').value;
				console.log(nameval);
				if(!nameval) {
					mui.alert('请输入姓名');
					return;
				}
				
				if(!cardnoval) {
					mui.alert('请输入卡号');
					return;
				}
				if(!backval) {
					mui.alert('请选择银行');
					return;
				}
				if(!backaddressval) {
					mui.alert('请选择开户地址');
					return;
				}

				mui.ajax($$$.siturl + '', {
					type: 'post',
					data: {
						name: nameval,
						uid: isuid,
						cardno: cardnoval,
						back: backval,
						backaddress: backaddressval,
					},
					dataType: 'json',
					success: function(data) {
						console.log(JSON.stringify(data));

					}
				})
			}
		</script>
	</body>

</html>