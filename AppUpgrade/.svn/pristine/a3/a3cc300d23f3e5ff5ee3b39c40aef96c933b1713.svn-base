		<script src="../../js/mui.min.js"></script>
		<script>
			mui.init({
				swipeBack: false
			});
			(function($) {
				$('.mui-scroll-wrapper').scroll({
					indicators: false //是否显示滚动条
				});
				var html2 = '<ul class="mui-table-view"><img style="width:100%;" src="'+$$$.imgurl+'data/app/liucheng.png" alt="" /></ul>';
				
				var item2 = document.getElementById('item2mobile');
				
				document.getElementById('slider').addEventListener('slide', function(e) {
					if (e.detail.slideNumber === 1) {
						if (item2.querySelector('.mui-loading')) {
							setTimeout(function() {
								item2.querySelector('.mui-scroll').innerHTML = html2;
							}, 500);
						}
					} 
				});
				var sliderSegmentedControl = document.getElementById('sliderSegmentedControl');
				$('.mui-input-group').on('change', 'input', function() {
					if (this.checked) {
						sliderSegmentedControl.className = 'mui-slider-indicator mui-segmented-control mui-segmented-control-inverted mui-segmented-control-' + this.value;
						//force repaint
						sliderProgressBar.setAttribute('style', sliderProgressBar.getAttribute('style'));
					}
				});
				var msgheight=document.querySelector('#msgheight');
				msgheight.style.height=window.screen.availHeight-100+'px';
//				console.log(msgheight.style.height);
				
//				
			})(mui);
		</script>
		<script type="text/javascript">
				
			
			mui.init()
			
			function submit(){
				
				var name=document.querySelector("#person_phone_name").value;
				var phone=document.querySelector("#person_phone_number").value;
				var compy=document.querySelector("#company").value;
				var dress=document.querySelector("#dress").value;
				var wanted=document.querySelector("#wanted").value;
				var need=document.querySelector("#need").value;
				var good=document.querySelector("#good").value;
				
				
				
				if(name==""){
					mui.alert("请填写您的姓名");
					return;
				}
				
				var regularMobile = /^13[0-9]{9}$|14[0-9]{9}$|15[0-9]{9}$|18[0-9]{9}$|17[0-9]{9}$/;
					numbers=phone.replace(/\s+/g, "");
					//alert(numbers);
                if(!numbers.match(regularMobile)) {
                    mui.alert('手机号码格式有误');
                    return;
                }
				
				if(compy==""){
					mui.alert("请填写您的公司名称");
					return;
				}
				if(dress==""){
					mui.alert("请填写您的地址");
					return;
				}
				if(wanted==""){
					mui.alert("请填写您的招聘岗位");
					return;
				}
				
				mui.ajax($$$.siturl + 'm=App&c=Tool&a=commpoy',{
					type : 'post',
					data :{
						name : name,
						phone : phone,
						company : compy,
						address : dress,
						gangwei : wanted,
						zhaoyaoqiu : need,
						xinzifuli : good
					},
					dataType : 'json',
					success : function(data){
//						mui.alert(data.msg);
						mui.alert('提交成功!客服人员将尽快与您取得联系,可以直接致电4008-334-588');
						console.log(JSON.stringify(data));
						if(data.staus=="1"){	
							mui.openWindow({
								url: '../../index.html',
							})
						}
						
					},
					error : function(xhr,err){
						mui.alert(xhr);
					}
				});			
			}	
			//tab
//			var hzlc2=document.querySelector('#hzlc2');
//			var hzlc=document.querySelector('#hzlc');
//			var tabhz=document.querySelector('.tabhz');
//			var tabhz1=document.querySelector('.tabhz1');
//			tabhz.onclick=function(){
//				hzlc.style.display='block';
//				hzlc2.style.display='none';
//			}
//			tabhz1.onclick=function(){
//				hzlc2.style.display='block';
//				hzlc.style.display='none';
//			}
			
		</script>
		
