		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="css/mui.min.css" rel="stylesheet" />
		<style>
			body {
				background-color: black;
			}
			html,body {
				width : 100%;
				height : 100%;
			}	
			
			.mui-slider {
				width : 100%;
				height : 100%;
			}
			.mui-slider-group {
				width : 100%;
				height : 100%;
			}
			.mui-slider-item {
				width : 100%;
				height : 100%;
			}
			.guide-img {
				width: 100%;
				height : 100%;
			}
		</style>
	</head> 

	<body>
		<div class="mui-slider">
		  <div class="mui-slider-group">     
		    <!--第一个内容区容器-->
		    <div class="mui-slider-item">
		      	<img class="guide-img" id="yindao0" src="images/yindao1.png" alt="" />
		    </div>
		    <!--第二个内容区-->
		    <div class="mui-slider-item">
		      	<img class="guide-img" id="yindao1" src="images/yindao2.png" alt="" />
		    </div>
		    <div class="mui-slider-item">
		      	<img class="guide-img" id="yindao2" src="images/yindao3.png" alt="" />
		    </div>
		    <div class="mui-slider-item">
		      	<img class="guide-img" id="yindao3" src="images/yindao4.png" alt="" style="position: relative;"/>
		      	<button id="into" style="position: absolute;left:50%;width:30%;height:20px;margin-left:-15%;bottom:70px;background:url(images/ljty.png) center center no-repeat; background-size:100% 100%;color:#fff;border:none;z-index: 100;"></button>
		    </div> 
		  </div>
		  	
		  	<!--指示器-->
		   	<div class="mui-slider-indicator">
	            <div class="mui-indicator mui-active"></div>
	            <div class="mui-indicator"></div>
	            <div class="mui-indicator"></div>
	            <div class="mui-indicator"></div>
	        </div>
		</div>
		<script src="js/mui.min.js"></script>
		<script type="text/javascript">
			mui.init()
			
	
//			mui.ajax($$$.siturl + 'm=App&c=Start', {
//				type: 'get',
//				dataType: 'json',
//				success: function(data) {
//					guid(data); 
//						 
