<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="css/mui.min.css" rel="stylesheet" />
	</head>
	<style type="text/css">
		/*搜索*/
		
		.search {
			width: 50%;
			height: 33px;
			float: left;
			margin-top: 5px;
			background-color: #efefef;
			border-radius: 15px;
			border: 1px solid #bab9b7;
			position: relative;
		}
	</style>

	<body>
		<header id="header12" class="mui-bar mui-bar-nav">

			<div class="selectcity" style="width:25%;display:block;float:left;" id="quanguo">
				<div id="area" style="padding-left:8px;color:#26aa12;font-weight:500;float:left;font-size:17px;line-height: 44px;width:70%;word-break:keep-all;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">

				</div>
				<span class="mui-icon mui-icon-arrowdown" style="color:#26aa12;font-weight:bold;width:5%;"></span>

			</div>

			<div class="search">
				<div style="position: absolute;left:14px;top:7px;width:19px;height:16px;background-image: url(images/sousuo.png);background-repeat: no-repeat;background-size: 19px 16px;">

				</div>
				<p style="position: absolute;left:40px;top:4px;">职位,企业名</p>
			</div>

			<div style="width:25%;float:left;overflow: hidden;">
				<div class="mfzp" id="zhaopin" style="float:right;font-size:16px;line-height: 44px;color:#26aa12;font-weight:500;">
					免费招聘
				</div>
				<div id="fanhuidingbu" style="display:none;float:right;font-size:16px;line-height: 44px;color:#26aa12;font-weight:500;">
					返回顶部
				</div>
			</div>
		</header>
		<script src="js/mui.min.js"></script>
		<script type="text/javascript">
			mui.init({
				subpages: [{
					url: 'index11.html',
					id: 'index11.html',
					styles: {
						top: '66px', //mui标题栏默认高度为45px；
						bottom: '0px' //默认为0px，可不定义；
					}
				}]
			});

			var city = document.querySelector('#area');
			var reg = /市/g;
			var cityinher = localStorage.getItem('cityName');
//			console.log(cityinher);
			if(!cityinher) {
				city.innerHTML = '青岛';
			} else {
				city.innerHTML = cityinher.replace(reg, '');
			}
			window.addEventListener('zlisindex1', function(e) {
				city.innerHTML = localStorage.getItem('cityName');
			});
			//搜索
			mui(document.body).on('tap', '.selectcity', function() {

				mui.openWindow({
					url: 'app/citylist/citylist.html',
					id: 'citylist.html',
					createNew: false, //是否重复创建同样id的webview，默认为false:不重复创建，直接显示
					waiting: {
						autoShow: false, //自动显示等待框，默认为true
					}

				})
			})
			//免费招聘
			mui(document.body).on('tap', '.mfzp', function() {

				mui.openWindow({
					url: 'app/zhaopin/zhao.html',
					id: 'zhao.html',
					createNew: false, //是否重复创建同样id的webview，默认为false:不重复创建，直接显示
					waiting: {
						autoShow: false, //自动显示等待框，默认为true
					}
				})
			})
			//城市选择
			mui(document.body).on('tap', '.search', function() {

				mui.openWindow({
					url: 'app/search/search.html',
					id: 'search.html',
					createNew: false, //是否重复创建同样id的webview，默认为false:不重复创建，直接显示
					waiting: {
						autoShow: false, //自动显示等待框，默认为true
					}
				})
			})
			
			window.addEventListener('headerfh', function(e) { 
				fanhuidingbu.style.display = "block";
				zhaopin.style.display = "none";
		    })  
		    window.addEventListener('headerfh1', function(e) { 
				fanhuidingbu.style.display = "none";
				zhaopin.style.display = "block";
		    })  
			//返回顶部
			var fanhuidingbu = document.getElementById('fanhuidingbu'); //返回按钮tap  
			mui(document.body).on('tap','#fanhuidingbu',function(e) {
				var wvc=plus.webview.getWebviewById('index11.html');
				mui.fire(wvc, 'fh');
			});
		</script>
	</body>

</html>