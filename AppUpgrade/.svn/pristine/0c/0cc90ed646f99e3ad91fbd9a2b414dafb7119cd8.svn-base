			(function($, doc) {
				

				
				$.plusReady(function() {
					
					var settings = app.getSettings();
                    var regButton = doc.getElementById('reg');
                    var loginButton = doc.getElementById('login');
					var huoqu = document.querySelector('#get-yanzheng');


                    // 绑定元素节点
					//var username = doc.getElementById('username');
                    var phoneNumber = doc.getElementById('phonenumber');
                    var yanzheng = doc.getElementById('yanzhengma');
                    var psd = doc.getElementById('password');
					var timer=null;
					var getyanzheng=document.getElementById('get-yanzheng');
					//不同意协议不能注册
					var agree = document.querySelector('#agree');
					//alert(agree.checked);
					if(agree.checked){
						//alert('允许按键');
						//regButton. = 'false';
						
					}else{
						//alert('禁止按键');
						//regButton.disabled = 'true';
					}

					// 获取验证码
					huoqu.addEventListener('click',function () {
                        var phoneNumber_v = phoneNumber.value;
						// 验证手机号是否为空，以及手机号格式是否正确
                        if(!phoneNumber){
                            $.alert('请输入手机号！');
                        }else {
//                          alert($$$.siturl + 'm=App&c=Mumber&a=sendmessageregist');
                            $.ajax($$$.siturl + 'm=App&c=Mumber&a=sendmessageregist',{
                                type:'post',
								data:{
                                    mobile:phoneNumber_v
								},
								success:function (str) {
										var data = JSON.parse(str);
                                    	plus.nativeUI.toast(data.msg);
//                                  	console.log(JSON.stringify(data.msg));
										if(data.msg=="短信发送成功"){
											if(data.msg=="180秒内仅能获取一次短信验证码,请稍后重试"){
												clearInterval(timer);
												getyanzheng.innerHTML='获取验证码';
											}else{
												clearInterval(timer);
												getyanzheng.innerHTML='';
												var n=60;
											timer=setInterval(function(){
												n--;
												if(n<0){
													clearInterval(timer);
													getyanzheng.innerHTML='获取验证码';
							
													}else{
														getyanzheng.innerHTML=n+'秒';
													}
												
													
												
												},1000)	
											}
											
											}
					
									//成功获取验证码
									//huoqu.innerHTML="验证码已发送";
                                },
								error:function (err) {
									$.alert(err);
                                }
                            });
                        }
                    });

					// 注册按钮点击
					regButton.addEventListener('click', function(event) {
                        phoneNumber_v = phoneNumber.value;
                        var yanzheng_v = yanzheng.value;
                        var psd_v = psd.value;

                        
                            var regularMobile = /^13[0-9]{9}$|14[0-9]{9}$|15[0-9]{9}$|18[0-9]{9}$|17[0-9]{9}$/;
		                    if(!phoneNumber_v.match(regularMobile)) {
		                        $.alert('手机号码格式有误');
		                        return;
		                    }
						
                        if(!phoneNumber_v){
                            $.alert('请输入手机号!');
                            return ;
                        }
                        if(!psd_v){
                            $.alert('请输入密码');
                            return ;
                        }
                        if(!yanzheng_v){
                            $.alert('请输入验证码');
                            return ;
						}


						localStorage.setItem("telephoneReg",phoneNumber_v);
						localStorage.setItem("psd",psd_v);
						$.ajax($$$.siturl + 'm=App&c=Mumber&a=regist',{
						    type:'post',
							data:{     
                                mobile:phoneNumber_v, 
								str:yanzheng_v,
                                pass:psd_v
							},
							success:function (str) {
								var data = JSON.parse(str);
								//alert(str);
								 plus.nativeUI.toast(data.msg);
								//console.log(str);
								
								if(data.staus==0){
									return;
								}
                               
								if(data.staus==1){
//									var account=phoneNumber_v;
//									var password=psd_v;
//									console.log(account);
									$.openWindow({
	                                    url: 'bianji_delete.html',
	                                    id: 'bianji_delete',
	                                    show: {
	                                        aniShow: 'pop-in'
	                                    }
	                                });
								
	                                
								} 
								
								
                           }, 
							error:function (err) {
                              //  plus.nativeUI.toast(err);
                            }
						});
					});

					// 跳转到登录界面
					loginButton.addEventListener('click',function(){
						$.openWindow({
                            url: 'login.html',
                            id: 'login',
                            show: {
                                aniShow: 'pop-in'
                            }
                        });

					})

				});
			}(mui, document));
