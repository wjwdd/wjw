			html,
			body {
				background-color: #efeff4;
			}
			
			.mui-bar-tab .mui-tab-item.mui-active {
				color: #26aa12;
			}
		</style>
	</head>

	<body>

		<nav class="mui-bar mui-bar-tab">

			<a id="defaultTab" class="mui-tab-item mui-active" href="index1.html">
				<!--<span class="mui-icon iconfont icon-shouye3"></span>-->
				<span class="mui-icon mui-icon-home"></span>

				<span class="mui-tab-label">首页</span>
			</a>
			<a class="mui-tab-item" href="community.html">
				<!--<span class="mui-icon iconfont icon-shequ"></span>-->
				<span class="mui-icon mui-icon-chatbubble"></span>

				<span class="mui-tab-label">社区</span>
			</a>
			<a class="mui-tab-item" href="xiaoxi.html">
				<!--<span class="mui-icon iconfont icon-m-shequ"><span class="badge" style="display: none;width:10px;height:10px;border-radius: 50%;background:red;position:absolute;top:2px;right:-2px;"></span></span>
				-->
				<span class="mui-icon mui-icon-email"><span class="badge" style="display: none;width:15px;height:15px;border-radius: 50%;background:red;position:absolute;top:0px;right:-5px;color:#fff;font-size:11px;line-height:17px;">1</span></span>

				<span class="mui-tab-label">消息</span>
			</a>
			<a class="mui-tab-item" href="wode.html">
				<!--<span class="mui-icon iconfont icon-wode4"></span>-->
				<span class="mui-icon mui-icon-contact"></span>

				<span class="mui-tab-label">我的</span>
			</a>
		</nav>
		<script src="js/mui.min.js"></script>
		<script src="js/xintiao.js"></script>
		<script type="text/javascript" charset="utf-8">
			//mui初始化
			mui.init({
				subpages: [{
					url: 'index1.html',
					id: 'index1.html',
					styles: {
						top: '0px', //mui标题栏默认高度为45px；
						bottom: '0px' //默认为0px，可不定义；
					}
				}]
			});

			var subpages = ['index1.html', 'community.html', 'xiaoxi.html', 'wode.html'];
			var subpage_style = {
				top: '0px',
				bottom: '51px'
			};

			var aniShow = {};
			var self;
			//创建子页面，首个选项卡页面显示，其它均隐藏；
			mui.plusReady(function() {

				//				plus.nativeUI.showWaiting("数据加载中"); //这里是开始显示原生等待框
				self = plus.webview.currentWebview();
				for(var i = 0; i < 4; i++) {
					var temp = {};
					var sub = plus.webview.create(subpages[i], subpages[i], subpage_style);
					if(i > 0) {
						sub.hide();
					} else {
						temp[subpages[i]] = "true";
						mui.extend(aniShow, temp);
					}
					self.append(sub);

				}
				//				plus.nativeUI.closeWaiting();
			});
			//当前激活选项
			var activeTab = subpages[0];
			var title = document.getElementById("title");
			//选项卡点击事件
			mui('.mui-bar-tab').on('tap', 'a', function(e) {
				var targetTab = this.getAttribute('href');
				if(targetTab == activeTab) {
					return;
				}

				//显示目标选项卡
				//若为iOS平台或非首次显示，则直接显示
				if(mui.os.ios || aniShow[targetTab]) {
					plus.webview.show(targetTab);
				} else {
					//否则，使用fade-in动画，且保存变量
					var temp = {};
					temp[targetTab] = "true";
					mui.extend(aniShow, temp);
					plus.webview.show(targetTab);
				}
				//隐藏当前;
				plus.webview.hide(activeTab);
				//更改当前活跃的选项卡
				activeTab = targetTab;
			});
			//自定义事件，模拟点击“首页选项卡”
			document.addEventListener('gohome', function() {
				var defaultTab = document.getElementById("defaultTab");
				//模拟首页点击
				mui.trigger(defaultTab, 'tap');
				//切换选项卡高亮
				var current = document.querySelector(".mui-bar-tab>.mui-tab-item.mui-active");
				if(defaultTab !== current) {
					current.classList.remove('mui-active');
					defaultTab.classList.add('mui-active');
				}
			});

			var backButtonPress = 0;
			mui.back = function(event) {
				backButtonPress++;
				if(backButtonPress > 1) {
					plus.runtime.quit();
				} else {
					plus.nativeUI.toast('再按一次退出应用');
				}
				setTimeout(function() {
					backButtonPress = 0;
				}, 1000);
				return false;
			};
			var login_uid = localStorage.getItem('user_name');
			if(login_uid != null) {

				soket(login_uid);
			}
			//登录回调
			window.addEventListener('soketlist', function(e) {

				var login_uid = localStorage.getItem('user_name');
				if(login_uid != null) {

					soket(login_uid);
				}
			});
			//socket
			function soket(login_uid) {
				var dom = {
					//					base: "http://192.168.1.111/CodeIgniter/",
					//					soketbase: "ws://192.168.1.111:7272/",
					base: "http://www.zhizhaow.com/",
					soketbase: "ws://www.zhizhaow.com:7272/",
				}
				var uid = '13' + login_uid + '448'; //用户id
				var a = 0; //消息数
				//离线消息
				mui.ajax(dom.base + "home/home/getallformong?uid=" + uid, {
					type: 'get',
					success: function(data) {
//						console.log(data);
						var data = JSON.parse(data);
						if(data.data != null) {
							for(var i = 0; i < data.data.length; i++) {

								showpushred();
								showreminder(data.data[i].fromuid);
							}
						}

					},
					error: function(xhr, type, errorThrown) {
						//异常处理；
						console.log(type);
					}
				})
				var badge = document.querySelector('.badge'); //消息数
				connect();

				function connect() {
					ws = new WebSocket(dom.soketbase);
					ws.onopen = onopen;
					ws.onmessage = onmessage;
				}
				// 连接建立时发送登录信息
				function onopen() {}

				function onmessage(e) {
					var dat = e.data;
//										console.log(dat);
					var msgs = JSON.parse(dat);
					if(msgs.type == 'ping') {
						return;
					}
					if(msgs.type == 'conn') {

						clientid = msgs.clientid;
						mui.ajax(dom.base + "home/home/servertobind?uid=" + uid + "&clientid=" + clientid, {
							type: 'get',
							success: function(str) {

							}
						})
					}

					if(msgs.type == 'count') {
						return;
					}

					if(msgs.type == 'msg') {
						var wvs = plus.webview.getDisplayWebview(); //屏幕可视窗口
						for(var i = 0; i < wvs.length; i++) {
							
							if(mui.os.android){
								if(wvs[i].id != 'chat.html' && wvs[i].id != 'index') {
									//								pluspush(msgs);//
									showpushred();
									showreminder(msgs.fromuid);
								}
							}else if(mui.os.ios){
								if(wvs[i].id != 'chat.html') {
									//								pluspush(msgs);//
									showpushred();
									showreminder(msgs.fromuid);
								}
							}
							
						}

					}
					if(msgs.type == 'closetoall') {}

					if(msgs.type == 'onlineuser') {}
				}

				function onclose() {
					alert("关闭连接");
				}

				function onlineuse(data) {

				}
				//通知栏消息提示
				function pluspush(a) {
					plus.push.createMessage(a.msg, '', a);

					plus.push.addEventListener("click", function(msg) {
						// 分析msg.payload处理业务逻辑 
						localStorage.setItem('admin', a.fromuid);

						mui.openWindow({
							url: 'app/chat/chat.html',
							id: 'chat.html'
						})
						removepushred();
					}, false);
				}
				//消息数回调
				window.addEventListener('lisindexId', function(e) {
					//					console.log(e.detail.id);
					var count = e.detail.count; //回调的消息数
					if(count != undefined) {
						a = a - count;
						if(a <= 0) {
							a = 0;
							badge.style.display = 'none';
						} else {
							badge.innerHTML = a;
						}
					}

				});
				//消息数显示
				function showpushred() {
					a++;
					badge.style.display = 'block';
					badge.innerHTML = a;
					mui.plusReady(function() {
						plus.device.vibrate(500);
					})
				}
				//消息数消失
				function removepushred() {
					badge.style.display = 'none';
					a = 0;
				}
				//消息数传到消息页面
				function showreminder(admin) {

					var id = admin;
					mui.plusReady(function() {
						var lisxiaoxi = plus.webview.getWebviewById('xiaoxi.html');
						//					var newdetails = plus.webview.getWebviewById('inchat.html');
						mui.fire(lisxiaoxi, 'reminder', {
							id: id
						});
					})

				}
				mui.plusReady(function() {
					document.addEventListener("pause", onAppBackground, false);
				})

				function onAppBackground() {
					//					connect();
				}
			}

			//			function plusReady(){
			//				// 获取所有Webview窗口  
			//				var vInfo = plus.push.getClientInfo();
			//		        //alert(vInfo);
			//		        var vInfoData = JSON.stringify(vInfo);
			//		        console.log(vInfoData);
			//
			//				
			//			}  
			// 			if(window.plus){  
			//					plusReady();  
			//				}else{  
			//					document.addEventListener("plusready",plusReady,false);  
			//				}
		</script>
	</body>

</html>