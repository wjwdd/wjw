/* 设置日历的大小 */
 .calendar {
	width: 100%;
	display: block;
	
	padding: 0 10px;
	background: #fff;
	
	border-radius: 5px;
}




/**
 * 设置日历顶部盒子
 */

.calendar .calendar-title-box {
	position: relative;
	width: 100%;
	height: 36px;
	line-height: 36px;
	text-align: center;
	display: inline-block;
}


/**
 * 设置上个月的按钮图标
 */

.calendar .prev-month {
	position: absolute;
	top: 12px;
	left: 50px;
	display: inline-block;
	width: 0px;
	height: 0px;
	border-left: 0px;
	border-top: 6px solid transparent;
	border-right: 8px solid #39D067;
	border-bottom: 6px solid transparent;
}


/**
 * 设置下个月的按钮图标
 */

.calendar .next-month {
	position: absolute;
	top: 12px;
	right: 50px;
	display: inline-block;
	width: 0px;
	height: 0px;
	border-right: 0px;
	border-top: 6px solid transparent;
	border-left: 8px solid #39D067;
	border-bottom: 6px solid transparent;
	cursor: pointer;
}


/* 设置日历表格样式 */

.calendar-table {
	width: 100%;
	border-collapse: collapse;
	text-align: center;
}

#calendarTitle {
	color: #39D067;
	font-size: 18px;
	font-weight: bold;
}


/* 表格行高 */

.calendar-table tr {
	height: 30px;
	line-height: 20px;
}

.calendar-table th {
	display: inline-block;
	width: 14%;
	height: 23px;
	text-align: center;
	
}

.calendar-table tr td {
	display: inline-block;
	width: 14%;
	height: 23px;
	text-align: center;
	position: relative;

}


/* 当前天 颜色特殊显示 */


/*.currentDay {
			color: red;
		}*/

.currentDay {
	background: url(../images/duihao.png) 18px 13px no-repeat;
	background-size:40% 40%;
	line-height: 23px;
	
}


/* 本月 文字颜色 */

.currentMonth {
	color: #999;
}


/* 其他月颜色 */

.otherMonth {
	color: #ede;
}
