	<style type="text/css">
		.mui-media-body span {
			font-size: 14px;
		}
		
		.mui-media-body p {
			font-size: 12px;
		}
		
		.days {
			position: relative;
		}
		
		.day {
			position: absolute;
			right: 15px;
			top: 15px;
			font-size: 12px!important;
			color: #999999;
		}
		
		.shuzi {
			height: 15px;
			display: none;
			border: 1px solid red;
			font-size: 10px!important;
			border-radius: 100%;
			color: #fff;
			padding: 0 3px;
			background-color: red;
			line-height: 15px;
			position: absolute;
			top: 15px;
			left: 45px;
		}
		
		.dengs {
			position: relative;
		}
		
		.deng {
			height: 16px;
			position: absolute;
			top: 15px;
			right: 20px;
		}
		
		.yues {
			position: relative;
		}
		
		.yue {
			position: absolute;
			right: 15px;
			top: 15px;
			font-size: 12px!important;
			color: #999999;
		}
