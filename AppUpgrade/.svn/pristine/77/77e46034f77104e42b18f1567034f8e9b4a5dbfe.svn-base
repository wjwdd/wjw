<!doctype html>
<html style="font-size: 62.5%;" ng-app="huifumeCtr">

	<head>
		<meta charset="UTF-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="css/com_detail.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="css/style.css" />
	</head>
	<style type="text/css">
		.mui-table-view-cell:after{
			display: none;
		}
	</style>
	<body ng-controller="myCtrl">
		<header id="header2" class="mui-bar mui-bar-nav header-top">
			<a class="mui-action-back  mui-icon mui-icon-left-nav mui-pull-left" style="color:#5a5656"></a>
			<h1 class="mui-title">回复我的</h1>
		</header>
		<ul class="mui-table-view" style="margin-top:55px;background:#ebebeb;">
		    <li  class="mui-table-view-cell mui-media" style="background: #f5f4f4;margin-bottom:5px;" ng-repeat="x in data" ng-click="tz(this)">
		        <a href="javascript:void(0)">
		            <img class=" mui-pull-left" ng-src={{imgurl+x.uilog}} style="width:15%;margin:10px 5% 0px 0px;border-radius:50%;">
		            <div class="mui-media-body" style="width:50%;height:100%;float:left;margin-top:10px;">
		                <span ng-bind="x.uilname.realname" >幸福</span>
		                <i class="sex"></i>
		                <p style="color:#999999;font-size:10px;" ng-bind="x.time">4分钟前</p>
		                <p class='mui-ellipsis' ><span>回复了你：</span><span ng-bind="x.content">是件幸福的事情；可是，打呼噜怎么办？</span></p>
		            </div>
		             <div style="float:right;width:70px;height:70px;margin:1% 0;" ng-if="x.famoususerimg.famoususerimg!=null"><img style="width:100%;height:100%;" ng-src={{imgurl+x.famoususerimg.famoususerimg[0].img}}></div>
		             <div class='mui-ellipsis' style="float:right;width:70px;height:70px;background:#7fcef7;margin:1% 0;color:#fff;font-size:10px;line-height: 70px;text-align:center;padding:0 10px;" ng-if="x.famoususerimg.famoususerimg==null" ng-bind="x.famoususerimg.content"></div>
		        </a>
		       
		    </li>
		    
		    
		</ul>
		
		
	</body>
	
	<script src="../../js/mui.min.js"></script>
	<script src="../../js/ag1.46.js"></script>
	<script src="../../js/factory.js"></script>
	
	<script type="text/javascript">
		angular.module('huifumeCtr',["myApp"])
			.controller('myCtrl' ,function($scope,$http,$data) {
				$data.getSheQuHFme ().success(function(data){
		 		console.log(JSON.stringify(data));
				$scope.data=data.data;
				$scope.imgurl=$$$.imgurl;
//				$scope.imglength=data.data.famoususerimg.famoususerimg[0].img;
				
				$scope.tz=function(){
					var hfid=this.x.id;
					var hfname=this.x.uilname.realname;
					localStorage.setItem('hfid',hfid);
					localStorage.setItem('hfname',hfname);
//					console.log(hfname);
					var uid1=this.x.chaxunuid;
					var uid2=this.x.huifudeuid;
//					console.log(hfid);
//					console.log(uid1);
//					console.log(uid2);
//					console.log(JSON.stringify(this.x));
					$data.dijijiru (hfid,uid1,uid2).success(function(req){
//						console.log(JSON.stringify(req));
					}).error(function(e){
						
					})

					mui.openWindow({
						url: 'huifume_detail.html',
						id: 'huifume_detail.html',
						extras: {},
						waiting: {
							autoShow: false, //自动显示等待框，默认为true
							title: '正在加载...', //等待对话框上显示的提示内容
						}
					})

				}
		 	});
			})
	</script>
	
</html>