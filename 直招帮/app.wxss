/**app.wxss**/
@import "style/weui.wxss";
@import "wx-list-index/wx-list-index.wxss";
@import "iconfont.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* job列表 */

.jobname {
  font-weight: 700;
  font-size: 14px;
  padding-bottom: 10px;
  line-height: 14px;
}

.job {
  position: relative;
  font-size: 14px;
  padding-bottom: 7px;
  line-height: 12px;
}

.job_job {
  color: #737373;
}

.job_xinzi {
  color: #26aa12;
  font-size: 1.2em;
  position: absolute;
  right: 0px;
  top: 0;
}

.jobfldq {
  position: relative;
  font-size: 12px;
}

.job_fuli {
  line-height: 12px;
  padding: 2px 4px;
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  border-radius: 5px;
  margin-right: 3px;
}

.job_dq {
  position: absolute;
  right: 0px;
  bottom: 0px;
}

.weui-media-box {
  padding: 8px 15px;
}



.fontzhutise {
  color: #30c45c;
}

.kfbuton {
  border: 0px;
  background: #fff;
  line-height: 50px;
  border-radius: 0;
}
